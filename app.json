{
  "expo": {
    "name": "Smart Menu Customer",
    "slug": "smart-menu-customer",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.smartmenu.customer",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app needs access to location to show your position on the map and set delivery addresses.",
        "NSLocationAlwaysUsageDescription": "This app needs access to location to show your position on the map and set delivery addresses."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.smartmenu.customer",
      "versionCode": 1,
      "edgeToEdgeEnabled": true,
      "permissions": ["ACCESS_COARSE_LOCATION", "ACCESS_FINE_LOCATION"]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "7d160ac7-b4c5-4ffe-bdc3-a536c4abbeed"
      }
    },
    "runtimeVersion": "1.0.0",
    "updates": {
      "url": "https://u.expo.dev/7d160ac7-b4c5-4ffe-bdc3-a536c4abbeed",
      "enabled": true,
      "checkAutomatically": "ON_LOAD"
    },
    "plugins": [
      "expo-updates",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Smart Menu to use your location to show your position on the map and set delivery addresses."
        }
      ]
    ]
  }
}
